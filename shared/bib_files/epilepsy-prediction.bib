@article{li2024geneti,
  title = {Genetic causal association between physical activities and epilepsy: A Mendelian randomization study.},
  author = {Li, Peihong and Li, Jiaxin and Xiao, Zheng and Sheng, Dandan and Liu, Weiping and Xiao, Bo and Zhou, Luo},
