@article{mormann2007seizur,
  title = {Seizure prediction: the long and winding road.},
  author = {Mormann, Florian and Andrzejak, Ralph G and Elger, Christian E and Lehnertz, Klaus},
  year = {2007},
  journal = {Brain : a journal of neurology},
